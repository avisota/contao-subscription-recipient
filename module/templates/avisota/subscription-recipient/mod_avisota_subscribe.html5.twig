{% extends 'mod_container.html5.twig' %}

{% block content %}
	<!-- indexer::stop -->
	{% if subscriptions is defined and subscriptions|length > 0 %}
		<p class="subscription">{{ _lang.fe_avisota_subscription.subscribed }}</p>
	{% else %}
		{% if subscriptions is defined %}
			<p class="subscription">{{ _lang.fe_avisota_subscription.allreadySubscribed }}</p>
		{% endif %}

		{% if confirmed is defined and confirmed|length > 0 %}
			<p class="confirmation">{{ _lang.fe_avisota_subscription.subscribeConfirmation }}</p>
		{% endif %}

		{{ form }}
	{% endif %}
	<!-- indexer::continue -->
{% endblock %}
